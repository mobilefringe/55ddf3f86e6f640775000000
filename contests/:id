<script>
    $(document).ready(function() {
        loadMallDataCached(renderAll); 
        
        $('#contest_form').submit(function (e) {
            e.preventDefault();
            data = $(this).serialize();
            if($('#first_name').val() != "" && $('#last_name').val() != "" && $('#email').val() !=""){
                if ($('#agree_contest').prop('checked') == true){
                    if($('#add_to_newsletter').prop('checked') == true){
                        submit_contest(data, e);
                    }
                    else{
                        alert("Please agree to receive emails from Heartland Town Centre.");
                        $('#add_to_newsletter').focus();    
                    }
                }
                else{
                    alert("Please agree to rules and regulations.");
                    $('#agree_contest').focus();
                }
            }else{
                alert("Please fill out the required fields.");
            }
        });
    })
    
    
    function renderAll(){
        $(".right_block, .bottom_block").show();
        var pathArray = window.location.pathname.split( '/' );
        var slug = pathArray[pathArray.length-1];
        contest_details = getContestBySlug(slug);
        if(contest_details != undefined){
            renderContest('#contest_container','#contest_template', contest_details);
        }
        else{
            $('#contest_ended').show()
        }
        
        $(".loading_overlay").hide();    
    }
    
    function renderContest(container, template, collection){
        var item_list = [];
        var item_rendered = [];
        var template_html = $(template).html();
        Mustache.parse(template_html);   // optional, speeds up future uses
        
        collection.alt_photo_url = getImageURL(collection.photo_url);
        collection.property_id = getPropertyID();
        var rendered = Mustache.render(template_html,collection);
        item_rendered.push(rendered);
        
        $(container).show();
        $(container).html(item_rendered.join(''));
    }
    
    function submit_contest(data) {
        var propertyDetails = getPropertyDetails();
        var host = propertyDetails.mm_host;
        var email = $("#email").val();
        var name = $("#first_name").val() + " " + $("#last_name").val();
        $.ajax({
            url: host+"/newsletter_no_captcha",
            type: "POST",
            dataType: "json",
            data: data,
            success: function(data) {
                $.getJSON("//mobilefringe.createsend.com/t/d/s/dljtlh/?callback=?", "cm-dljtlh-dljtlh=" + email);
                $("#success_subscribe").fadeIn();
                $('#contest_form').trigger('reset');
                
            },
            error: function(data){
                $.getJSON("//mobilefringe.createsend.com/t/d/s/dljtlh/?callback=?", "cm-dljtlh-dljtlh=" + email);
                $("#success_subscribe").fadeIn();
                $('#contest_form').trigger('reset');
            }
        });
    }
    
    
    
    
    
    
    
    
    
    
</script>