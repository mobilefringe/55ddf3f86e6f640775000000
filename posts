<script>
$(document).ready(function(e){
    // init(e);
    
    function renderAll(){
        $(".loading_overlay").show();
        $("#main_content").addClass("main_content_full_width");
        $(".right_block, .bottom_block").hide();
            
        var blog_posts =  getBlogDataBySlug("htc-htc-blog").posts
        console.log("blog_posts",blog_posts);
        var sorted_posts = blog_posts.sortBy(function(o){ return o.publish_date }).reverse();
        var main_post = sorted_posts[0];
        renderSinglePost('#main_post_container', "#main_post_template", main_post);

        var posts = sorted_posts.splice(1);
        
        renderPosts('#posts_container', '#posts_template', posts);
        console.log("posts", posts);
        $(".nav_container").addClass("border_bottom");
        
        // show_content();
        
        load_more(1);
            
        $('#load_more_posts').click(function(e){
            var i = $('#num_loaded').val();
            load_more(i);
            e.preventDefault();
        });
        
        $(".loading_overlay").hide();
    }
    loadMallData(renderAll); 
});
</script>